# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/vessel_tracking

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRE=30d

# Session Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900

# External APIs
AIS_API_KEY=your_ais_api_key
AIS_API_URL=https://api.aisstream.io/v0
AIS_AUTH_HEADER_NAME=Authorization
AIS_AUTH_SCHEME=Bearer
AIS_POSITIONS_PATH=/positions
WEATHER_API_KEY=your_weather_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5
PIRACY_API_KEY=your_piracy_data_api_key
CONGESTION_API_URL=https://api.port-authority.com

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@vesseltracking.com

# Data Refresh
MAP_REFRESH_INTERVAL=30000
AIS_POLLING_INTERVAL=60000
WEATHER_POLLING_INTERVAL=300000

# Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs
